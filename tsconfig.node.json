{
  "compilerOptions": {
    "composite": true, // ADD THIS
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022", // Changed from ES2023
    "lib": ["ES2022"], // Changed from ES2023
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false, // Changed from true to false
    "moduleDetection": "force",
    "noEmit": true,
    "emitDeclarationOnly": false, // ADD THIS

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // Changed from true to false
    "noUnusedParameters": false, // Changed from true to false
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    
    /* Additional settings */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}